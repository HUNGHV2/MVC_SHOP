@model MVC_SHOP.Models.Categories

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Categories</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
        </dl>
        <hr />
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            <table>
                <tr>
                    <td>
                        <div style="padding-left: 20px">
                            Created at @Html.DisplayFor(model => model.Creared) by @Html.DisplayFor(model => model.CreatedBy)
                        </div>
                        <div style="padding-left: 20px">
                            Modified at @Html.DisplayFor(model => model.Modified) by @Html.DisplayFor(model => model.ModifieddBy)
                        </div>
                    </td>
                    <td class="control-label col-md-2"></td>
                    <td style="padding-left: 20px">
                        <input type="submit" value="Delete" class="btn btn-s-md btn-success btn-rounded" />
                        <a>@Html.ActionLink("Cancel", "Index", new { area = "" }, new { @class = "btn btn-s-md btn-dark btn-rounded" })</a>
                    </td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
