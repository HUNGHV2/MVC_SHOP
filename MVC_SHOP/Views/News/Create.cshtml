@model MVC_SHOP.Models.News

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<link href="~/css/Custom.css" rel="stylesheet" />
<script src="~/js/MVC_Shop.js"></script>
@using (Html.BeginForm("Create", "News", FormMethod.Post, new { enctype = "multipart/form-data"})) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control widthAuto" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, new { @class = "ckeditor", @id = "ckeditor1"})
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12 col-md-12 col-sm-12 col-sm-12">
                @Html.LabelFor(model => model.Image, new { @class = "control-label col-md-2" })
                <div class="control-label col-md-2">
                    <input type="file" name="image" id="image"><br>
                    <img src="" class="img_View" alt="Image preview..." style="width: 200px; height: 200px;">
                </div>

                @Html.ValidationMessageFor(model => model.Image)
            </div>
        </div>
        <hr />
        <table>
            <tr>
                <td class="control-label col-md-2"></td>
                <td style="padding-left: 20px">
                    <input type="submit" value="Save" class="btn btn-s-md btn-success btn-rounded" />
                    <a>@Html.ActionLink("Cancel", "Index", new { area = "" }, new { @class = "btn btn-s-md btn-dark btn-rounded" })</a>
                </td>
            </tr>
        </table>
        <div style="display: none;">
            @Html.EditorFor(model => model.Creared)
            @Html.EditorFor(model => model.Modified)
            @Html.EditorFor(model => model.CreatedBy)
            @Html.EditorFor(model => model.ModifieddBy)
        </div>
    </div>
}
<div>
</div>
<hr/>
